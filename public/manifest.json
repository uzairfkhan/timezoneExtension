{
  "manifest_version": 3,
  "name": "Timezone Converter",
  "version": "1.0.0",
  "description": "Quickly convert times between timezones with a popup or right-click context menu",
  "permissions": [
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Timezone Converter"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  }
}
